        </div>
    </AuthorizeView>

    <div class="table-responsive">
        <table class="table">
            <thead>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            </thead>
            <tbody>
            @foreach (var item in model)
            {
                <tr>
                    <td>@item.FirstName</td>
                    <td>@item.lastName</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                </tr>
            }

            </tbody>
            <tfoot>
            <RadzenPager Count="model.Count()" PageSize="10" PageChanged="(e) => GetPaginatedData(e)"></RadzenPager>
            </tfoot>
        </table>
    </div>
</div>


